{% extends 'dashboardbase.html.twig' %}
	{% block stylesheets %}
		{{ parent() }}
		<link rel="stylesheet" href="//cdn.datatables.net/1.10.18/css/jquery.dataTables.min.css">
    {% endblock %}


	{% block content %}
		<div class="table-responsive" style="padding: 20px">
			<table id="myTable" class="table table-striped table-bordered table-hover">
				<thead>
					<tr>
						<th>firstname</th>
						<th>lastname</th>
						<th>sex</th>
						<th>email</th>
						<th>username</th>
						<th>roles</th>
						<th>modifier</th>
						<th>Delelte</th>
					</tr>
				</thead>
				<tbody>
					{%  for user in users %}
						<tr data-id="{{ user.id }}">
							<td>{{ user.firstname }}</td>
							<td>{{ user.lastname }}</td>
							<td>{{ user.sex }}</td>
							<td>{{ user.email }}</td>
							<td>{{ user.username }}</td>
							<td>
								{{ user.roles | join('|') }}
							</td>
							<td>
								<a href="">
									<i class="fa fa-edit" aria-hidden="true"><span></span></i>
								</a>
							</td>
							<td>
								<a href="">
									<i class="fa fa-ban" aria-hidden="true"><span></span></i>
								</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
    {% endblock %}

{% block javascripts %}
    {{ parent() }}
	<script src="//cdn.datatables.net/1.10.18/js/jquery.dataTables.min.js"></script>
	<script>
        $(document).ready( function () {
            $('#myTable').DataTable({
                columnDefs: [
                    {
                        targets: -1,
                        className: 'dt-body-right'
                    }
                ]
            });
        } );
	</script>
{% endblock %}