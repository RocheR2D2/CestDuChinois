<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>C'est du Chinois</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <link rel="icon" type="image/x-icon" href="{{ asset('logo.ico') }}" />
        <!-- style css-->
        <link rel = "stylesheet" type="text/css" href="{{ asset('assets/css/login.css') }}">

        <!-- bootstrap css-->
        <link rel = "stylesheet" type="text/css" href="{{ asset('assets/css/bootstrap.min.css') }}">
    </head>
    <body>
        <div class="materialContainer">


   <div class="box">


       {% if errors %}
           <div class="alert alert-danger alert-dismissible">
               <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
               {{  errors.messageKey }}
           </div>
       {% endif %}
      <div class="title">LOGIN</div>

        <form action="{{ path('login') }}" method="POST">
            <div class="input">
                <label for="name">Username</label>
                <input type="text" name="_username" id="name">
                <span class="spin"></span>
            </div>

            <div class="input">
                <label for="pass">Password</label>
                <input type="password" name="_password" id="pass">
                <span class="spin"></span>
            </div>

            <div class="button login">
                <button type="submit"><span>GO</span> <i class="fa fa-check"></i></button>
            </div>

            <a href="" class="pass-forgot">Forgot your password?</a>
        </form>
   </div>

   <div class="overbox">
       <div class="material-button alt-2"><span class="shape"></span></div>

       <div class="title">REGISTER</div>

       <form action="{{ path('register') }}" method="POST">
           <div class="input">
               <label for="reemail">Email</label>
               <input type="password" name="reemail" id="reemail">
               <span class="spin"></span>
           </div>
           <div class="input">
               <label for="regname">Username</label>
               <input type="text" name="regname" id="regname">
               <span class="spin"></span>
           </div>
           <div class="input">
              <label for="regpass">Password</label>
              <input type="password" name="regpass" id="regpass">
              <span class="spin"></span>
           </div>

          <div class="button">
             <button type="submit"><span>NEXT</span></button>
          </div>
       </form>

   </div>

</div>

            <!-- jquery js-->
        <script type="text/javascript" src="{{ asset('assets/js/jquery.min.js') }}"></script>
        <!-- jqueryui js-->
        <script type="text/javascript" src="{{ asset('assets/js/jquery-ui.min.js') }}"></script>    
        <!-- bootstrap js-->
        <script type="text/javascript" src="{{ asset('assets/js/bootstrap.min.js') }}"></script>
        <!-- personal js-->
        <script type="text/javascript" src="{{ asset('assets/js/login.js') }}"></script>
    </body>
</html>
