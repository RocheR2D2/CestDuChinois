{% extends 'base.html.twig' %}

{% block body %}
    <h1>Recette</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ recette.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ recette.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ recette.description }}</td>
            </tr>
            <tr>
                <th>Etape</th>
                <td>{{ recette.etape }}</td>
            </tr>
            <tr>
                <th>Ingredient</th>
                <td>{{ recette.ingredient }}</td>
            </tr>
            <tr>
                <th>Saveur</th>
                <td>{{ recette.saveur }}</td>
            </tr>
            <tr>
                <th>Facons</th>
                <td>{{ recette.facons }}</td>
            </tr>
            <tr>
                <th>Temps</th>
                <td>{{ recette.temps }}</td>
            </tr>
            <tr>
                <th>Niveau</th>
                <td>{{ recette.niveau }}</td>
            </tr>
            <tr>
                <th>Valide</th>
                <td>{% if recette.valide %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{% if recette.status %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('recette_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('recette_edit', { 'id': recette.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
